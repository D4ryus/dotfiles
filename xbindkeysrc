# file: ~/.xbindkeysrc
# author: d4ryus - https://github.com/d4ryus/
# vim:ts=2:ai:sw=2:ft=sh:

# file copyed from /etc/skel

# meta + F2 to open dmenu
"dmenu_run -l 8 -fn '-*-terminus-medium-r-*-*-14-*-*-*-*-*-*-*'"
  Super_L + P

# fn + F3 lock screen
"sleep 1 && xset dpms force off && slock"
  XF86ScreenSaver

# fn + F4 suspend
"systemctl suspend"
  XF86Sleep
#also XF86Sleep
# handle by systemd -> /etc/systemd/logind.conf

# fn + F8 brightness up
"light -A 10"
  XF86MonBrightnessUp

# fn + F8 brightness down
"light -U 10"
  XF86MonBrightnessDown

# audio keys to controll the volume
# lower volume
"amixer set Master 5%-"
  XF86AudioLowerVolume

# raise volume, also unmute
"amixer set Master 5%+ unmute"
  XF86AudioRaiseVolume

# mute volumne
"amixer set Master toggle"
  XF86AudioMute

# not used keys
#""
#  XF86AudioMicMute

#""
#  XF86Launch1
